@model MarcaViewModel
@{
    ViewData["Title"] = "Crear Marca";
}

<div class="row">
    <div class="col-md-8  offset-md-2 by-10" id="CrearMarca">
        <div class="row" id="TituloCrearMarca">
            <h1>Crear Marca</h1>
        </div>

        <div class="row" id="SubtituloCrearMarca">
            <h5>Una marca hace referencia a la empresa fabricante del auto</h5>
        </div>

        <div class="row" id="FormularioCrearMarca">
            <form asp-action="Crear">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Descripcion" class="form-label"></label>
                    <input asp-for="Descripcion" class="form-control" id="CampoMarcaCrear" />
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <button class="btn" id="CrearMarcaBoton">Enviar</button>
                <a class="btn" id="CrearMarcaCancelar" asp-action="Index">Cancelar</a>
            </form>
        </div>
    </div>
</div>


@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}
