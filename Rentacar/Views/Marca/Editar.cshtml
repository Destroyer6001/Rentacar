@model MarcaViewModel
@{
    ViewData["Title"] = "Editar Marca";
}

<div class="row">
    <div class="col-md-8  offset-md-2 by-10" id="EditarMarca">
        <div class="row" id="TituloEditarMarca">
            <h1>Editar Marca</h1>
        </div>

        <div class="row" id="SubtituloEditarMarca">
            <h5>Una marca hace referencia a la empresa fabricante del auto</h5>
        </div>

        <div class="row" id="FormularioEditarMarca">
            <form asp-action="Editar">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" asp-for="Id" />
                <div class="mb-3">
                    <label asp-for="Descripcion" class="form-label"></label>
                    <input asp-for="Descripcion" class="form-control" id="CampoMarcaEditar" />
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <button class="btn" id="EditarMarcaBoton">Enviar</button>
                <a class="btn" id="EditarMarcaCancelar" asp-action="Index">Cancelar</a>
            </form>
        </div>
    </div>
</div>
@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}


